<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mugshot.pos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Mugshot POS</name>
    <description>Point of Sale System for MugShots Cafe</description>
    <author email="support@mugshot.com" href="http://mugshot.com">
        MugShots Cafe
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="orientation" value="landscape" />
        <preference name="fullscreen" value="false" />
    </platform>
</widget>
